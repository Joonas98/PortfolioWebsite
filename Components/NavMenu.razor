@namespace Components
@inject NavigationManager NavManager

<div class="navbar">
    <button class="nav-item" @onclick='() => NavManager.NavigateTo("#bio")'>
        <span class="nav-tooltip">Bio</span>
        <svg style="fill: var(--vanta-highlight-whiter);"
             xmlns="http://www.w3.org/2000/svg"
             viewBox="0 0 16 16">
            <path d="m16 9.226l-8-6.21l-8 6.21V6.694l8-6.21l8 6.21zM14 9v6h-4v-4H6v4H2V9l6-4.5z" />
        </svg>
    </button>

    <button class="nav-item" @onclick='() => NavManager.NavigateTo("#experience")'>
        <span class="nav-tooltip">Experience</span>
        <svg style="fill: var(--vanta-highlight-whiter);"
             xmlns="http://www.w3.org/2000/svg"
             viewBox="0 0 16 16">
            <path d="M15 4h-4V3c0-.55-.45-1-1-1H6c-.55 0-1 .45-1 1v1H1c-.55 0-1 .45-1 1v9c0 .55.45 1 1 1h14c.55 0 1-.45 1-1V5c0-.55-.45-1-1-1m-9-.998L6.002 3h3.996l.002.002V4H6zM15 8h-2v1.5c0 .275-.225.5-.5.5h-1a.5.5 0 0 1-.5-.5V8H5v1.5c0 .275-.225.5-.5.5h-1a.5.5 0 0 1-.5-.5V8H1V7h14z" />
        </svg>
    </button>

    <button class="nav-item" @onclick='() => NavManager.NavigateTo("#references")'>
        <span class="nav-tooltip">References</span>
        <svg style="fill: var(--vanta-highlight-whiter);"
             xmlns="http://www.w3.org/2000/svg"
             viewBox="0 0 16 16">
            <path d="M13.5 0h-12C.675 0 0 .675 0 1.5v13c0 .825.675 1.5 1.5 1.5h12c.825 0 1.5-.675 1.5-1.5v-13c0-.825-.675-1.5-1.5-1.5M13 14H2V2h11zM4 9h7v1H4zm0 2h7v1H4zm1-6.5a1.5 1.5 0 1 1 3.001.001A1.5 1.5 0 0 1 5 4.5M7.5 6h-2C4.675 6 4 6.45 4 7v1h5V7c0-.55-.675-1-1.5-1" />
        </svg>
    </button>

    <button class="nav-item" @onclick='() => NavManager.NavigateTo("#education")'>
        <span class="nav-tooltip">Education</span>
        <svg style="fill: var(--vanta-highlight-whiter);"
             xmlns="http://www.w3.org/2000/svg"
             viewBox="0 0 16 16">
            <path d="M14 2v13H3.5a1.5 1.5 0 1 1 0-3H13V0H3C1.9 0 1 .9 1 2v12c0 1.1.9 2 2 2h12V2z" />
            <path d="M3.501 13a.5.5 0 0 0 0 1H13v-1z" />
        </svg>
    </button>

    <button class="nav-item" @onclick='() => NavManager.NavigateTo("#projects")'>
        <span class="nav-tooltip">Projects</span>
        <svg style="fill: var(--vanta-highlight-whiter);"
             xmlns="http://www.w3.org/2000/svg"
             viewBox="0 0 20 16">
            <path d="m13 11.5l1.5 1.5l5-5l-5-5L13 4.5L16.5 8zm-6-7L5.5 3l-5 5l5 5L7 11.5L3.5 8zm3.958-2.148l1.085.296l-3 11l-1.085-.296z" />
        </svg>
    </button>

    <button class="nav-item toggle" @onclick="ToggleAutoSlide">
        <span class="nav-tooltip">@Tooltip</span>
        <img src="@Icon" alt="Toggle autoplay" />
    </button>
</div>

@code {
    [Parameter] public bool AutoSlideEnabled { get; set; }
    [Parameter] public EventCallback ToggleAutoSlide { get; set; }

    private string Tooltip => AutoSlideEnabled ? "Autoplay On" : "Autoplay Off";
    private string Icon =>
      AutoSlideEnabled
        ? "Icons/fluent-color--image-32.svg"
        : "Icons/fluent-color--image-off-32.svg";
}
