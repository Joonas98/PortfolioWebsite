@using Components
@inherits LayoutComponentBase

<CascadingValue Value="autoSlideEnabled">
    <div class="layout">
        <NavMenu AutoSlideEnabled="autoSlideEnabled"
                 ToggleAutoSlide="ToggleAutoSlide" />
        <div class="content">
            @Body
        </div>
    </div>
</CascadingValue>

@code {
    private bool autoSlideEnabled = true;

    private void ToggleAutoSlide()
      => autoSlideEnabled = !autoSlideEnabled;
}
